$C = "../Common.ui";

Group #EditorRoot {
  Anchor: (Full: 0);
  LayoutMode: Middle;
  Background: #0a0c10(0.82);

    Group #Panel {
    Anchor: (Width: 900, Height: 620);
    LayoutMode: Top;
    Padding: (Left: 22, Right: 22, Top: 18, Bottom: 18);
    Background: (TexturePath: "../Common/Popup.png", Border: 14);

    Group #Header {
      Anchor: (Width: 856, Height: 140);
      LayoutMode: Top;
      Padding: (Left: 6, Right: 6, Top: 2, Bottom: 8);

      Label #EditorTitle {
        @Text = "Better ScoreBoard";
        Anchor: (Width: 856, Height: 34);
        Style: (FontSize: 22, RenderBold: true, TextColor: #f6f8ff, HorizontalAlignment: Center, VerticalAlignment: Center);
      }

      Label #PlaceholderHint {
        @Text = "Placeholders: {server}, {world}, {online}, {max_players}, {player}, {playtime}, {tps}, {money}";
        Anchor: (Width: 856, Height: 20);
        Style: (FontSize: 13, TextColor: #c8d2e3, HorizontalAlignment: Center, VerticalAlignment: Center);
      }

      Label #LimitHint {
        @Text = "Max lines shown: 12";
        Anchor: (Width: 856, Height: 20);
        Style: (FontSize: 12, TextColor: #8ca0bf, HorizontalAlignment: Center, VerticalAlignment: Center);
      }

      Label #ColorHint {
        @Text = "Prefix each section with [#rrggbb] to layer colors";
        Anchor: (Width: 856, Height: 20);
        Style: (FontSize: 12, TextColor: #8ca0bf, HorizontalAlignment: Center, VerticalAlignment: Center);
      }

      Group #TitleRow {
        LayoutMode: Left;
        Anchor: (Width: 856, Height: 56);
        Padding: (Left: 12, Right: 12, Top: 4, Bottom: 4);

        Label {
          Text: "Titre du scoreboard";
          Anchor: (Width: 200, Height: 40);
          Style: (FontSize: 14, TextColor: #c8d2e3, VerticalAlignment: Center);
        }

        Group { Anchor: (Width: 10); }

        $C.@TextField #TitleInput {
          FlexWeight: 1;
          PlaceholderText: "Add your server name";
        }

        Group { Anchor: (Width: 10); }

        $C.@TextField #TitleColorHex {
          Anchor: (Width: 140, Height: 38);
          PlaceholderText: "#ffffff";
        }
      }

    }

    Group #ScrollArea {
