      $C.@TextButton #ApplyButton {
        @Text = "Apply";
        Anchor: (Width: 180, Height: 46);
      }

      Group { Anchor: (Width: 12); }

      $C.@SecondaryTextButton #SaveButton {
        @Text = "Save";
        Anchor: (Width: 210, Height: 46);
      }

      Group { Anchor: (Width: 12); }

      $C.@SecondaryTextButton #ReloadButton {
